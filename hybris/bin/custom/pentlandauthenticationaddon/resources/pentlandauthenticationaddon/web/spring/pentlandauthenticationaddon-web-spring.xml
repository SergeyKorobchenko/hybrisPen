<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>

	<alias name="pentlandAbstractAuthenticationProvider" alias="abstractAcceleratorAuthenticationProvider"/>
	<bean abstract="true" id="pentlandAbstractAuthenticationProvider" class="com.bridgex.security.AbstractPentlandAuthenticationProvider">
		<property name="bruteForceAttackCounter" ref="bruteForceAttackCounter" />
		<property name="modelService" ref="modelService" />
		<property name="userDetailsService" ref="siteBasedUserDetailsService" />
		<property name="userService" ref="userService" />
		<property name="passwordEncoderService" ref="passwordEncoderService" />
	</bean>

</beans>
